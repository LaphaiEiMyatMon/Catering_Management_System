@model Moment_Catering_System.Models.MenuTCMaintenance
@{
    ViewBag.Title = "MenuTCList";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}

<link rel="stylesheet" href="~/Style/StylesforList.css">
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Main row -->
            <div class="row">
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="m-0 title">Menu TC List</h2>
                                <hr />
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Menu ID</th>
                                                <th>TCDetail</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var data in Model.MenuTCList)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.TCID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.MenuID)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.TCDetail)
                                                    </td>
                                                    <td>

                                                        <a href="/MenuTCMaintenance/EditMenuTC?MenuTCID=@data.TCID">  <i class="fa fa-edit" style="font-size:15.5px;color:forestgreen"></i></a>

                                                        <a href="/MenuTCMaintenance/DeleteMenuTC?MenuTCID=@data.TCID" class="confirmation"><i class="fas fa-trash-alt" style="font-size:15.5px;color:red"> </i></a>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!--end table-responsive-->
                                <hr />
                                <a href="AddMenuTC" class="save-btn" style="float:right">Add New MenuTC</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>



@if (ViewBag.Msg != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
        };
    </script>

}

<script type="text/javascript">
    $('.confirmation').on('click', function () {
        return confirm('Are you sure you want to Delete?');
    });
</script>
