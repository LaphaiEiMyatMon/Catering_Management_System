@model Moment_Catering_System.Models.PaymentMethodMaintenance

@{
    ViewBag.Title = "PaymentMethodList";
    Layout = "~/Views/Shared/_sideBar.cshtml";
}
<link rel="stylesheet" href="~/Style/StylesforList.css">
<script src="~/Scripts/confirmation.js"></script>
<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Main row -->
            <div class="row">
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="m-0 title">Payment Method List</h2>
                                <hr />
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead>

                                            <tr>
                                                <th>
                                                    ID
                                                </th>
                                                <th>
                                                    Payment Method
                                                </th>
                                                <th>
                                                    Action
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var data in Model.PaymentMethodList)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.PaymentMethodID)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => data.PaymentMethod)
                                                    </td>

                                                    <td>

                                                        <a href="/PaymentMethodMaintenance/EditPaymentMethod?PaymentMethodID=@data.PaymentMethodID">  <i class="fa fa-edit" style="font-size:15.5px;color:forestgreen"></i></a>

                                                        <i class="fas fa-trash-alt" style="font-size:15.5px;color:red;" onclick="deleteConfirm(event, '/PaymentMethodMaintenance/DeletePaymentMethod?PaymentMethodID=@data.PaymentMethodID')"> </i>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!--end table-responsive-->
                                <hr />

                                <a href="AddPaymentMethod" class="save-btn" style="float:right">Add Payment Method</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>